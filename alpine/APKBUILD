pkgname=sniproxy
pkgver=0.9.12
pkgrel=0
pkgdesc="Transparent TLS and HTTP proxy with SNI support"
url="https://github.com/dlundquist/sniproxy"
arch="x86_64 aarch64 armv7"
license="BSD-2-Clause"
depends="libev libpcre2-8 libcares openssl"
makedepends="autoconf automake libtool pkgconfig gettext-dev libev-dev pcre2-dev c-ares-dev openssl-dev linux-headers"
options="!check"
source="$pkgname-$pkgver.tar.gz
	sniproxy.initd
	sniproxy.confd"

builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare
	cd "$builddir"
	./autogen.sh
}

build() {
	cd "$builddir"
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-rpath --enable-dns
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 sniproxy.conf "$pkgdir"/etc/sniproxy.conf
	install -Dm755 "$srcdir"/sniproxy.initd "$pkgdir"/etc/init.d/sniproxy
	install -Dm644 "$srcdir"/sniproxy.confd "$pkgdir"/etc/conf.d/sniproxy
}

sha512sums="
"
